{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "php artisan serve --port=8080",
        "watch": "concurrently \"npm run serve\" \"browser-sync start --proxy http://localhost:8080 --files resources/views/**/*.blade.php,app/Http/Controllers/**/*.php,public/**/*.js,public/**/*.css --port 3000\""
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "browser-sync": "^3.0.4",
        "concurrently": "^9.2.0",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
